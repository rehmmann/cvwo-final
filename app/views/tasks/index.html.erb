<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Detail</th>
      <th>Tag</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.task_name %></td>
        <td><%= task.detail %></td>
        <td><%= task.tag %></td>
        <td><%= link_to 'Show', task ,class:"btn btn-light"%></td>
        <td><%= link_to 'Edit', edit_task_path(task) ,class:"btn btn-light"%></td>
        <td><%= link_to 'Delete', task, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-light" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path ,class:"btn"%>
